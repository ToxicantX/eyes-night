---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Tags from '../../components/Tags.astro';
import { CATEGORIES, classifyByTags } from '../../consts';

export async function getStaticPaths() {
	return CATEGORIES.map((c) => ({ params: { category: c.key }, props: { category: c } }));
}

const { category } = Astro.props;
const posts = (await getCollection('blog'))
	.filter((p) => classifyByTags(p.data.tags ?? []).includes(category.key))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<html lang="zh-CN">
	<head>
		<BaseHead title={`${category.emoji} ${category.name}`} description={`${category.name} 分类文章`} />
	</head>
	<body>
		<Header />
		<main>
			<h1>{category.emoji} {category.name} 分类</h1>
			<p>共 {posts.length} 篇文章</p>
			<ul style="list-style:none;padding:0;display:grid;gap:1rem;">
				{posts.map((post) => (
					<li style="border:1px solid rgb(var(--gray-light));border-radius:12px;padding:1rem;background:#fff;">
						<h3 style="margin:0 0 .4rem;"><a href={`${import.meta.env.BASE_URL}blog/${post.id}/`}>{post.data.title}</a></h3>
						<p style="margin:.2rem 0;color:rgb(var(--gray));"><FormattedDate date={post.data.pubDate} /></p>
						<p style="margin:.4rem 0;">{post.data.description}</p>
						<Tags tags={post.data.tags} />
					</li>
				))}
			</ul>
		</main>
		<Footer />
	</body>
</html>
