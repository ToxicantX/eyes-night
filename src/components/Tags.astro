---
interface Props {
	tags: string[];
}

const { tags = [] } = Astro.props;
---

{
	tags.length > 0 && (
		<ul class="tags">
			{tags.map((tag) => (
				<li><a href={`${import.meta.env.BASE_URL}tags/${encodeURIComponent(tag)}/`}>#{tag}</a></li>
			))}
		</ul>
	)
}

<style>
	.tags {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
		list-style: none;
		padding: 0;
		margin: 0.75rem 0;
	}
	.tags a {
		display: inline-block;
		padding: 0.2rem 0.6rem;
		border: 1px solid rgb(var(--gray-light));
		border-radius: 999px;
		text-decoration: none;
		font-size: 0.85rem;
		color: rgb(var(--gray-dark));
	}
	.tags a:hover {
		border-color: var(--accent);
		color: var(--accent);
	}
</style>
